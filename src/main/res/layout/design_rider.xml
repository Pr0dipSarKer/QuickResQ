<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:backgroundTint="#E7E6E5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:cardCornerRadius="90dp"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bloodicon1"
                    android:scaleType="fitCenter"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/usernameId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="username"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/reId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reg id no:"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/black"
                />

          <TextView
              android:id="@+id/ridId"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Rider name"
              android:textSize="16dp"
              android:textStyle="bold"
              android:padding="5dp"
              android:textColor="@color/black"
              />

            <TextView
                android:id="@+id/bloodId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood group"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/red"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:background="@color/orange"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Phone: "
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/phoneNumbId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="01893847584"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:id="@+id/callId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_add_call_24"

                    />

            </LinearLayout>







        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>